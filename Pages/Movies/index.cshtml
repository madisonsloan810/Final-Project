@page
@model Final_Project.Pages.Movies.IndexModel

<h2 class="mb-4">Movies</h2>
<p>
    <a class="btn btn-primary mb-3" asp-page="Create">
        <i class="bi bi-plus-circle"></i> Add New Movie
    </a>
</p>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
@foreach (var m in Model.Movies)
{
    <div class="col">
        <div class="card h-100 shadow-sm">
            <!-- I Had to look up how to create these posters and have the images update according to the submissions by users -->
            @if (!string.IsNullOrWhiteSpace(m.PosterUrl))
            {
                <img src="@m.PosterUrl"
                     class="card-img-top"
                     alt="@m.Title poster"
                     style="height: 350px; object-fit: cover;" />
            }
            else
            {
                <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                     style="height: 350px;">
                    <span>No Poster</span>
                </div>
            }
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                    @m.Title
                    <small class="text-muted">(@m.ReleaseYear)</small>
                </h5>
                <p class="card-text">
                    @(m.Summary.Length > 150
                        ? m.Summary.Substring(0, 150) + "..."
                        : m.Summary) 
                </p>
                <p class="mb-3">
                @{ //I did have to look up how to do the Eggs for the Ratings instead of Stars and I had to limit the length fo the summary so it wouldn't misalign all my cards
                    int count = m.Ratings.Count;
                    double avg = count > 0
                        ? m.Ratings.Average(r => r.Score)
                        : 0;
                    int fullEggs = (int)Math.Floor(avg);
                    bool hasHalfEgg = avg - fullEggs >= 0.1;
                    int emptyEggs = 5 - fullEggs - (hasHalfEgg ? 1 : 0);
                }
                @for (int i = 0; i < fullEggs; i++)
                {
                    <i class="bi bi-egg-fried text-warning"></i>
                }
                @if (hasHalfEgg)
                {
                    <i class="bi bi-circle-half text-warning"></i>
                }
                @for (int i = 0; i < emptyEggs; i++)
                {
                    <i class="bi bi-circle text-muted"></i>
                }
                <span class="ms-2">
                    <strong>@avg.ToString("0.0")</strong>
                    <small class="text-muted">(@count)</small>
                </span>
                </p>

                <div class="mt-auto">
                    <a asp-page="Details"
                       asp-route-id="@m.MovieID"
                       class="btn btn-sm btn-outline-primary">
                        Details
                    </a>
                    <a asp-page="Edit"
                       asp-route-id="@m.MovieID"
                       class="btn btn-sm btn-outline-secondary">
                        Edit
                    </a>
                    <a asp-page="Delete"
                       asp-route-id="@m.MovieID"
                       class="btn btn-sm btn-outline-danger">
                        Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
}

</div>
